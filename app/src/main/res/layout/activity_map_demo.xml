<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.at.agromap.MapDemo">

    <android.support.v7.widget.Toolbar
        android:id="@+id/map_demo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/geodb_file_path"
        android:layout_centerInParent="true" />

    <com.esri.android.map.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/map_demo_toolbar">
    </com.esri.android.map.MapView>

    <Switch
        android:text="@string/show_hide_layers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_demo_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/switch_show_layers"
        android:splitTrack="false" />

</RelativeLayout>
